<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.myfilmes" name="MyFilmes" version="1.0.0" provider-name="AddonReneSilva">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.urlresolver" version="2.10.8"/>
  </requires>
    
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
    
  <extension point="xbmc.addon.metadata">
    <language>en</language>
    <platform>all</platform>
    <summary lang="en">Filmes e Series Online</summary>
    <description lang="en">
            No addon MyFilmes voce assiste filmes separados por categorias, lancamentos,filmes HD, etc. 
            Voce tambem pode ver as informacoes ou assistir ao trailer do filme no submenu do addon (Botao direito do mouse ou tecla "C").
        </description>
  </extension>
</addon>
